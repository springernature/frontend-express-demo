{
  "name": "frontend-techtest",
  "version": "0.0.0",
  "private": true,
  "main": "app.js",
  "type": "module",
  "scripts": {
    "build:sass": "sass stylesheets/style.scss public/stylesheets/style.css --style=expanded --source-map",
    "build:js": "rollup -c",
    "build": "npm-run-all --parallel build:*",
    "dev": "npm-run-all --parallel start:dev \"build:* -- --watch\"",
    "start": "node app --experimental-modules",
    "start:dev": "nodemon npm start",
    "test": "npx jest --verbose tests/javascript/**/*.test.js"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "date-fns": "^2.13.0",
    "debug": "~2.6.9",
    "express": "~4.17.1",
    "hbs": "^4.1.1",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@babel/preset-env": "^7.16.11",
    "babel-jest": "^25.4.0",
    "jest-cli": "^26.4.2",
    "jest-handlebars": "^1.0.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.33.3",
    "sass": "^1.49.9"
  },
  "jest": {
    "testURL": "http://localhost:3001",
    "transform": {
      "^.+\\.js$": "babel-jest",
      "\\.hbs$": "jest-handlebars"
    },
    "testEnvironment": "jsdom",
    "transformIgnorePatterns": [],
    "testPathIgnorePatterns": [
      "public"
    ],
    "setupFiles": []
  }
}
